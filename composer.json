{
    "name": "mnapoli/externals",
    "description": "This is the project for externals.io",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Externals\\": "src/",
            "Bref\\Framework\\": "bref-framework/"
        },
        "files": [
            "init.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Externals\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "php-di/php-di": "^7.0.0-beta2",
        "twig/twig": "^2.0",
        "mnapoli/silly": "^1.7",
        "doctrine/dbal": "^3.0",
        "twig/extensions": "^1.5",
        "misd/linkify": "^1.1",
        "psr7-sessions/storageless": "^7.0",
        "league/commonmark": "^1.3",
        "gravatarphp/gravatar": "^2.0",
        "gravatarphp/twig-integration": "^2.0",
        "league/oauth2-client": "^2.5",
        "league/oauth2-github": "^2.0",
        "algolia/algoliasearch-client-php": "^1.28",
        "rvdv/nntp": "^0.9.2",
        "zbateson/mail-mime-parser": "^1.0",
        "vlucas/phpdotenv": "^2.6",
        "sentry/sentry": "^1.11",
        "bref/bref": "^1.0.2",
        "bref/logger": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "bref/dev-server": "^0.1",
        "mnapoli/hard-mode": "^0.3",
        "phpunit/phpunit": "^9.2.6",
        "vimeo/psalm": "^4.2"
    },
    "config": {
        "sort-packages": true
    }
}
